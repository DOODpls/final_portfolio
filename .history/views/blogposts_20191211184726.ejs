<!DOCTYPE html>
<html lang="en">
    <%- include("partials/head") %>
<body>
  <%- include("partials/header") %>
    <div class="blog-banner-container">
      <div class="blog-banner-inner-container">
        <div class="blog-inner-container-text"><%= blogpost.title%> </div>
        <div id="subtitle" class="subtitle"><%= blogpost.date %></div>
      </div>
    </div>
    <div class="post-outer-cont">
      <div class="post-inner-cont">
        <div class="post-container">

            <% 
            function conmvert(){

              let a = document.querySelector("#post-content")
            var converter = new showdown.Converter();
            var text = items.blog_cont;
            a.innerHTML = converter.makeHtml(text);
            
            }
            
            conmvert();
            %>

          <p class="post-content" id="post-content"> </p>
        </div>
      </div>
    </div>
  <%- include("partials/footer") %>
</body>
<%- include("partials/scripts") %>
</html>